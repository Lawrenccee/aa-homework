<% if action == :new %>
  <% message = 'Add Pokemon!' %>
  <% action_url = pokemons_url %>
<% else %>
  <% message = 'Update Pokemon' %>
  <% action_url = pokemon_url(pokemon.id) %>
<% end %>

<div class="pokemon-form-container">
  <form class="pokemon-form" action="<%= action_url %>" method="post">
    <%= auth_token %>

    <% if action == :edit %>
      <input type="hidden" name="_method" value="PATCH">
    <% end %>

    <div class="name-container">
      <label class="form-label" for="name">Name: </label>
      <input id="name" type="text" name="pokemon[name]" value="<%= pokemon.name %>">
    </div>

    <br>

    <input class="buttons button-center" type="submit" value="<%= message %>">
  </form>
</div>
